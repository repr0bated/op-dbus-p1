[Unit]
Description=op-web Tools Server
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=jeremy
Group=jeremy
WorkingDirectory=/home/jeremy/op-dbus-v2

# Environment
Environment="PORT=8082"
Environment="STATIC_DIR=/home/jeremy/op-dbus-v2/static"
Environment="RUST_LOG=info"
Environment="MCP_TOOL_FILTER=core"
EnvironmentFile=/home/jeremy/.op-web.env

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/home/jeremy/op-dbus-v2
CapabilityBoundingSet=

# Process limits
LimitNOFILE=65536
LimitNPROC=512

# Start service
ExecStart=/usr/local/sbin/op-web-server

# Restart policy
Restart=always
RestartSec=10s
StartLimitInterval=5min
StartLimitBurst=3

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=op-web-tools

[Install]
WantedBy=multi-user.target
