# OP-DBUS Environment Configuration
# Copy to /etc/op-dbus/environment

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# HTTP server binding
PORT=8080
BIND_ADDRESS=127.0.0.1

# Static file directory
STATIC_DIR=/var/www/op-dbus/static

# =============================================================================
# DATA DIRECTORIES
# =============================================================================

OP_DBUS_DATA_DIR=/var/lib/op-dbus
OP_DBUS_CACHE_DIR=/var/lib/op-dbus/cache
OP_DBUS_LOG_DIR=/var/log/op-dbus
OP_DBUS_SESSION_DIR=/var/lib/op-dbus/sessions
OP_DBUS_SNAPSHOT_DIR=/var/lib/op-dbus/snapshots

# =============================================================================
# MCP CONFIGURATION
# =============================================================================

MCP_CONFIG_FILE=/etc/op-dbus/mcp/servers.json

# =============================================================================
# INTROSPECTION
# =============================================================================

INTROSPECTION_CACHE_PATH=/var/lib/op-dbus/cache/introspection.db
INTROSPECTION_CACHE_TTL=3600

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Provider: antigravity, gemini, huggingface
LLM_PROVIDER=antigravity

# HuggingFace settings (requires HF_TOKEN in secrets.env)
HF_MODEL=meta-llama/Llama-3.2-3B-Instruct

# Gemini settings (requires GEMINI_API_KEY in secrets.env)
GEMINI_MODEL=gemini-pro

# =============================================================================
# LOGGING
# =============================================================================

RUST_LOG=info,op_chat=debug,op_mcp=debug,op_tools=info
RUST_BACKTRACE=1

# =============================================================================
# SECURITY
# =============================================================================

# Session timeout in seconds (default: 24 hours)
SESSION_TIMEOUT=86400

# Maximum request size in bytes (default: 10MB)
MAX_REQUEST_SIZE=10485760

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=60

# =============================================================================
# AGENTS
# =============================================================================

# Agent spawn timeout in seconds
AGENT_SPAWN_TIMEOUT=30

# Maximum concurrent agents
MAX_CONCURRENT_AGENTS=50

# Agent health check interval in seconds
AGENT_HEALTH_CHECK_INTERVAL=60
